{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "preserveValueImports": true,
    "importsNotUsedAsValues": "error",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"]
  },
   /* 指定编译文件或排除指定编译文件 */
  "include": [  
    // "./auto-imports.d.ts",
    ".vitepress/**/*.ts",
    ".vitepress/components/*.vue",
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
